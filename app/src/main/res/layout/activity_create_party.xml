<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/eventTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventTitleText" />

        <EditText
            android:id="@+id/eventTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/eventDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDateText" />

        <DatePicker
            android:id="@+id/eventDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TimePicker
            android:id="@+id/eventTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/eventVenueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventVenueText" />

        <EditText
            android:id="@+id/eventVenueEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10" />

        <TextView
            android:id="@+id/eventLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventLocationText" />

        <EditText
            android:id="@+id/eventLocationLatEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/eventLocationLatHint" />

        <EditText
            android:id="@+id/eventLocationLongEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/eventLocationLongHint" />

        <TextView
            android:id="@+id/eventNoteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventNoteText" />

        <EditText
            android:id="@+id/eventNodeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/selectInviteesEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectInviteesTextViewText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/inviteesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviteesButtonText" />

        <Button
            android:id="@+id/createEventButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/createEventButtonText"/>

    </LinearLayout>
</ScrollView>